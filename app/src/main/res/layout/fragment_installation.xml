<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    tools:context="com.example.rmontoya.installationwizardfragment.fragments.InstallationFragment">

    <TextView
        android:id="@+id/installation_header_text"
        style="@style/installation_header_text"
        android:layout_marginTop="@dimen/start_title_margin_top"
        android:text="@string/installation_title" />

    <TextView
        android:id="@+id/installation_finish_text"
        style="@style/paragraph_text"
        android:layout_centerInParent="true"
        android:text="@string/installation_complete_text"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress_bar_installation"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/standard_element_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard_element_margin"
            android:text="@string/cancel_button" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/next" />

    </LinearLayout>

</RelativeLayout>