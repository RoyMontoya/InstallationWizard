<resources>
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="start_fragment_title_style">
        <item name="android:textSize">@dimen/start_title_text_size</item>
        <item name="android:textColor">@android:color/holo_purple</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/start_title_margin_top</item>
    </style>

    <style name="paragraph_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/paragraph_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/standard_element_margin</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="installation_header_text" parent="paragraph_text">
        <item name="android:textSize">@dimen/installation_header_text_size</item>
        <item name="android:layout_centerInParent">false</item>
    </style>

</resources>
